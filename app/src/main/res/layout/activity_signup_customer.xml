<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back4"
    tools:context=".Signup_Customer">

  <TextView
      android:id="@+id/textView9"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="casual"
      android:text="@string/signup"
      android:textColor="#FFEB3B"
      android:textSize="24sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.175" />

  <TextView
      android:id="@+id/textView10"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/name"
      android:textSize="20sp"
      app:layout_constraintBaseline_toBaselineOf="@+id/name_signup"
      app:layout_constraintEnd_toStartOf="@+id/name_signup"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent" />

  <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/name_signup"
      android:layout_width="252dp"
      android:layout_height="42dp"
      android:hint="Enter your name"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/textView10"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.386" />

  <EditText
      android:id="@+id/email_signup"
      android:layout_width="251dp"
      android:layout_height="47dp"
      android:layout_marginEnd="32dp"
      android:ems="10"
      android:inputType="textEmailAddress"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.45" />

  <TextView
      android:id="@+id/textView7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/e_mail"
      android:textSize="20sp"
      app:layout_constraintBaseline_toBaselineOf="@+id/email_signup"
      app:layout_constraintEnd_toStartOf="@+id/email_signup"
      app:layout_constraintHorizontal_bias="0.485"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textView11"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/mo_no"
      android:textSize="20sp"
      app:layout_constraintBaseline_toBaselineOf="@+id/mono_signup"
      app:layout_constraintEnd_toStartOf="@+id/mono_signup"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent" />

  <EditText
      android:id="@+id/mono_signup"
      android:layout_width="249dp"
      android:layout_height="40dp"
      android:layout_marginEnd="8dp"
      android:ems="10"
      android:inputType="phone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/textView11"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.52" />

  <TextView
      android:id="@+id/textView12"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="City:"
      android:textSize="20sp"
      app:layout_constraintBaseline_toBaselineOf="@+id/city_signup"
      app:layout_constraintEnd_toStartOf="@+id/city_signup"
      app:layout_constraintHorizontal_bias="0.511"
      app:layout_constraintStart_toStartOf="parent" />

  <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/city_signup"
      android:layout_width="252dp"
      android:layout_height="37dp"
      android:layout_marginEnd="32dp"
      android:hint="@string/city"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.678" />

  <EditText
      android:id="@+id/setpass_signup"
      android:layout_width="225dp"
      android:layout_height="33dp"
      android:ems="10"
      android:inputType="textPassword"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.209"
      app:layout_constraintStart_toEndOf="@+id/textView13"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.759" />

  <TextView
      android:id="@+id/textView13"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:text="Set password:"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.752" />

  <TextView
      android:id="@+id/textView14"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Address:"
      android:textSize="20sp"
      app:layout_constraintBaseline_toBaselineOf="@+id/city_rsignup"
      app:layout_constraintEnd_toStartOf="@+id/city_rsignup"
      app:layout_constraintHorizontal_bias="0.611"
      app:layout_constraintStart_toStartOf="parent" />

  <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/city_rsignup"
      android:layout_width="246dp"
      android:layout_height="39dp"
      android:layout_marginEnd="36dp"
      android:hint="Address"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.596" />

  <EditText
      android:id="@+id/conpass_signup"
      android:layout_width="228dp"
      android:layout_height="35dp"
      android:ems="10"
      android:inputType="textPassword"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.138"
      app:layout_constraintStart_toEndOf="@+id/textView15"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.84" />

  <TextView
      android:id="@+id/textView15"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Confirm Pass.:"
      android:textSize="20sp"
      app:layout_constraintBaseline_toBaselineOf="@+id/conpass_signup"
      app:layout_constraintEnd_toStartOf="@+id/conpass_signup"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Back to Login"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.203"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.963" />

  <TextView
      android:id="@+id/textView16"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="casual"
      android:text="Welcome Dear Customer!!!!"
      android:textColor="#FF9800"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.096"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.036" />

  <Button
      android:id="@+id/submit_signup"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Submit"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/back"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.963" />

  <ProgressBar
      android:id="@+id/progressBar"
      style="?android:attr/progressBarStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="invisible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.272" />

</androidx.constraintlayout.widget.ConstraintLayout>